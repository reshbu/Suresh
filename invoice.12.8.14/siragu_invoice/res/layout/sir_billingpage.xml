<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background= "@drawable/bitmap"
    >
     <HorizontalScrollView
android:id="@+id/horizontalScrollView2"
android:layout_width="wrap_content"
android:layout_height="wrap_content" >

<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical" >

<LinearLayout
android:id="@+id/layout_catagory_btn1"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal" >

</LinearLayout>

<LinearLayout
android:id="@+id/layout_catagory_btn2"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal" >

</LinearLayout>

</LinearLayout>

</HorizontalScrollView>

     <View
         android:id="@+id/view1"
         android:layout_width="wrap_content"
         android:layout_height="3dp"
         android:background="#3bafda" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.15"
        android:orientation="horizontal" >

<RelativeLayout
android:layout_width="271dp"
android:layout_height="match_parent"
android:layout_weight="1.15" >

<EditText
android:id="@+id/sir_serach_item"
android:layout_width="match_parent"
 android:hint="Search"
android:layout_height="wrap_content"
android:ems="10" />

<GridView
    android:id="@+id/gridView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_below="@+id/sir_gv_cat_header"
    android:numColumns="3" >

</GridView>

<TextView
    android:id="@+id/sir_gv_cat_header"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/sir_serach_item"
    android:layout_marginLeft="284dp"
    android:text=""
    android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>

<View
android:id="@+id/View01"
android:layout_width="3dp"
android:layout_height="wrap_content"
android:background="#3bafda" />

<RelativeLayout
    android:id="@+id/sir_bp_tv_vat"
    android:layout_width="398dp"
    android:layout_height="match_parent" >

    <ListView
        android:id="@+id/sir_cart_lv_bp"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/radioSex" >
    </ListView>

    <TextView
        android:id="@+id/sir_tv_billno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bill NO :"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/sir_tv_totalamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:text="Total Amount :"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#da3b3f" />

    <RadioGroup
        android:id="@+id/radioSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/sir_bp_tv_st"
        android:layout_below="@+id/sir_tv_totalamount"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/sir_bp_rb_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/sir_cart_lv_bp"
            android:layout_toLeftOf="@+id/sir_bp_tv_tax"
            android:text="Card" />

        <RadioButton
            android:id="@+id/sir_bp_rb_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cash" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:text="Output Vat @1% :"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView4"
        android:text="Service Tax 1% :"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/sir_tv_billno"
        android:text="Sub Total :"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/sir_bp_bt_submit"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sir_cart_lv_bp"
        android:layout_alignParentRight="true"
        android:text="Print" />

    <TextView
        android:id="@+id/sir_bp_tv_tax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sir_bp_vat_tv"
        android:layout_below="@+id/sir_bp_vat_tv"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/sir_bp_vat_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_toRightOf="@+id/textView4"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/Sir_b_tv_tm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sir_bp_tv_tax"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ff0000" />

    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:layout_below="@+id/radioSex"
        android:background="#3bafda" />

    <Button
        android:id="@+id/sir_billnumber"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Printer Connecter" />

    <TextView
        android:id="@+id/sir_bp_tv_st"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/sir_tv_totalamount"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/sir_tv_billnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/sir_bp_vat_tv"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <CheckBox
        android:id="@+id/sir_offine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sir_billnumber"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/sir_bp_tv_st"
        android:text="Offline" />

    <Button
        android:id="@+id/sir_clear_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/sir_billnumber"
        android:text="Clear" />

</RelativeLayout>


</LinearLayout>

</LinearLayout>